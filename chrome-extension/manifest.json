{
    "manifest_version": 3,
  
    "name": "Zustand Dev Tools",
    "version": "0.1",
  
    "description": "Developer Tool and Time Travel Debugger for Zustand",
    "author": "Debuggen Team",
  
    "devtools_page": "/html/devtools.html",

    "background": {
      "service_worker": "/js/background.js"
    },
    "content_scripts": [
      {
        "matches": [ "<all_urls>" ],
        "js": ["/js/content-script.js"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["/js/content-script.js", "/js/injected-script.js"],
      "matches": ["<all_urls>"]
    }],
    "permissions": ["storage", "tabs", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"], 
    "externally_connectable": {
      "matches": [
        "<all_urls>"
      ]
    }
  }